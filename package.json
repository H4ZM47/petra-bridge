{
  "name": "petra-bridge",
  "version": "0.1.0",
  "description": "HTTP API bridge for Petra CLI - enables AI agents to interact with your vault",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "copy-assets": "cp manifest.json styles.css dist/ 2>/dev/null || true",
    "build": "node build.js && npm run copy-assets",
    "dev": "node build.js --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "api",
    "cli",
    "automation"
  ],
  "author": "Alex Haslach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/H4ZM47/petra-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/H4ZM47/petra-bridge/issues"
  },
  "homepage": "https://github.com/H4ZM47/petra-bridge#readme",
  "dependencies": {
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.0",
    "obsidian": "^1.5.0",
    "typescript": "^5.3.0"
  }
}
